<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hazem.phonebook.Features.Activity.LogsScreen">
    <android.support.v7.widget.Toolbar
        android:id="@+id/logs_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/contact_color"
        app:navigationIcon="?attr/homeAsUpIndicator"></android.support.v7.widget.Toolbar>
    <include
        android:id="@+id/logs_info"
        layout="@layout/contact_info"
        android:layout_below="@id/logs_info_toolbar"
        android:layout_height="@dimen/contact_info_height"
        android:layout_width="wrap_content"></include>
    <ListView
        android:id="@+id/logs_info_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/black"
        android:dividerHeight="1dp"
        android:layout_below="@id/logs_info"></ListView>
</RelativeLayout>
