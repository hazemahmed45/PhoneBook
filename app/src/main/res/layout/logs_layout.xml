<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/logs_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/logs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contact name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/logs_image"
        android:layout_toEndOf="@+id/logs_image" />
    <TextView
        android:id="@+id/logs_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contact_num"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/logs_name"
        android:layout_toRightOf="@+id/logs_image"
        android:layout_toEndOf="@+id/logs_image" />
    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="0"
        android:background="@drawable/call_num_background"
        android:id="@+id/logs_callnum"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_call"
        android:text="last_time"
        android:layout_below="@id/logs_callnum"
        android:layout_marginTop="5dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>